<% if current_user %>
  
  <h1><%= @product.name %></h1>
  <ul>
    <li>Price: <%= @product.price_in_dollars %></li>
    <li>Description: <%= @product.description %></li>
  </ul>
  <%= link_to 'Edit Product', edit_product_path(@product) %>|
  <%= link_to 'Delete Product', product_path(@product), :method => :delete %>

  <h3>Reviews</h3>
  
<% end %>